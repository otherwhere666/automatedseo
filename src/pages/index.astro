---
import BaseLayout from '../layouts/BaseLayout.astro';
import CategoryPill from '../components/CategoryPill.astro';
import BlogArticleCard from '../components/BlogArticleCard.astro';
import MagazineSection from '../components/MagazineSection.astro';
import { getAllPosts, getAllCaseStudies, getAllDestinations } from '../utils/content';
import { getAuthorFromSlug, formatDate, getCategoryFromPost } from '../utils/authors';

const posts = getAllPosts();
const caseStudies = getAllCaseStudies().slice(0, 4);
const destinations = getAllDestinations().slice(0, 3);

// Featured post for hero
const featuredPost = posts[0];
const gridPosts = posts.slice(1, 4);

// Hero content
const heroData = featuredPost ? {
  title: featuredPost.title,
  description: featuredPost.description,
  slug: `/blog/${featuredPost.slug}`,
  image: featuredPost.image || 'https://images.unsplash.com/photo-1566073771259-6a8506099945?w=1600&h=900&fit=crop',
  category: getCategoryFromPost(featuredPost),
  author: getAuthorFromSlug(featuredPost.slug),
  date: featuredPost.publishDate
} : {
  title: "What is Otherwhere?",
  description: "AI travel concierge: text or call to get curated trip options and booking help",
  slug: "/what-is-otherwhere",
  image: "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=1600&h=900&fit=crop",
  category: "About",
  author: "Maddy S.",
  date: new Date().toISOString()
};

const formattedHeroDate = formatDate(heroData.date);
---

<BaseLayout
  title="Otherwhere | AI Travel Concierge Insights"
  description="Travel planning insights from Otherwhere, the AI travel concierge. Curated guides, destination tips, and why the future of booking is curation, not search."
>
  <!-- Hero Section -->
  <section class="bg-paper py-12 md:py-16">
    <div class="max-w-wide mx-auto px-6">
      <header class="mb-10">
        <h1 class="font-display text-5xl md:text-6xl lg:text-7xl tracking-wide">OTHERWHERE</h1>
        <p class="text-ink-secondary mt-2 text-lg">Travel insights & booking guides</p>
      </header>

      <div class="grid lg:grid-cols-[1fr_320px] gap-6 lg:gap-8">
        <a href={heroData.slug} class="blog-hero-featured group block aspect-[16/10] lg:aspect-[16/9]">
          <img
            src={heroData.image}
            alt={heroData.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
          <div class="blog-hero-featured-overlay"></div>

          <div class="absolute inset-0 p-6 md:p-10 flex flex-col justify-end">
            <CategoryPill category={heroData.category} variant="light" class="mb-4 w-fit" />

            <h2 class="font-display text-2xl md:text-4xl lg:text-5xl text-paper leading-tight mb-4 max-w-2xl">
              {heroData.title}
            </h2>

            <p class="text-paper/80 text-base md:text-lg mb-4 max-w-xl line-clamp-2 hidden md:block">
              {heroData.description}
            </p>

            <div class="text-paper/70 text-sm">
              <span>By {heroData.author}</span>
              <span class="mx-2">Â·</span>
              <time datetime={heroData.date}>{formattedHeroDate}</time>
            </div>
          </div>
        </a>

        <div class="blog-hero-sidebar">
          <div>
            <p class="section-subtitle text-ink-tertiary">OTHERWHERE PICKS</p>
            <p class="text-ink-secondary leading-relaxed">
              Travel insights, booking tips, and destination guides curated by our team.
            </p>
          </div>

          <div class="mt-8 lg:mt-0 space-y-3">
            <a href="/blog" class="btn-pill btn-pill-primary inline-block">ALL ARTICLES</a>
            <a href="sms:+13239224067" class="btn-pill btn-pill-secondary inline-block ml-2">TEXT US</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Articles -->
  {gridPosts.length > 0 && (
    <MagazineSection variant="dark" title="LATEST" viewAllLink="/blog">
      {gridPosts.map((post) => (
        <BlogArticleCard post={post} variant="dark" />
      ))}
    </MagazineSection>
  )}

  <!-- Trips We Planned -->
  {caseStudies.length > 0 && (
    <MagazineSection variant="light" title="TRIPS WE PLANNED" subtitle="REAL TRIPS" viewAllLink="/case-studies" columns={4}>
      {caseStudies.map((cs) => (
        <a href={`/case-studies/${cs.slug}`} class="magazine-card group">
          <div class="relative mb-4">
            <img src={cs.image} alt={cs.title} class="magazine-card-image" loading="lazy" />
          </div>
          <div class="space-y-2">
            <CategoryPill category={cs.type} variant="dark" />
            <h3 class="font-display text-lg md:text-xl leading-tight text-ink">{cs.title}</h3>
            <p class="text-sm text-ink-tertiary line-clamp-2">{cs.quote}</p>
          </div>
        </a>
      ))}
    </MagazineSection>
  )}

  <!-- Destinations -->
  {destinations.length > 0 && (
    <MagazineSection variant="dark" title="DESTINATIONS" subtitle="WHERE TO STAY" viewAllLink="/destinations">
      {destinations.map((dest) => (
        <a href={`/destinations/${dest.slug}`} class="magazine-card group">
          <div class="relative mb-4">
            <img src={dest.image} alt={`${dest.city}, ${dest.country}`} class="magazine-card-image" loading="lazy" />
          </div>
          <div class="space-y-2">
            <CategoryPill category={dest.region} variant="light" />
            <h3 class="font-display text-xl md:text-2xl leading-tight text-paper">{dest.city}</h3>
            <p class="text-sm text-paper/70">{dest.tagline}</p>
          </div>
        </a>
      ))}
    </MagazineSection>
  )}

  <!-- CTA -->
  <section class="bg-paper cta-section">
    <div class="cta-section-content">
      <p class="cta-section-subtitle">READY TO GO?</p>
      <h2 class="cta-section-title">BOOK YOUR TRIP</h2>
      <p class="cta-section-description">
        Text us where you want to go. We'll send options. You pick. We book.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="sms:+13239224067" class="btn-pill btn-pill-primary inline-block">TEXT (323) 922-4067</a>
        <a href="/what-is-otherwhere" class="btn-pill btn-pill-secondary inline-block">HOW IT WORKS</a>
      </div>
    </div>
  </section>
</BaseLayout>
