const trustStats = [
  { value: "9", label: "Case studies" },
  { value: "~5 min", label: "Avg. to booked" },
  { value: "100%", label: "Booked" }
];

const testimonial = {
  quote: "I told them where I wanted to go and five minutes later I had options. Ten minutes after that, I was booked.",
  author: "Otherwhere customer"
};
---

<BaseLayout
  title="Trips We Planned | Otherwhere Case Studies"
  description="Real examples of trips planned through Otherwhere. See how personal travel booking works with anonymized case studies."
  schema={schemas}
>
  <article class="py-12">
    <div class="blog-content">
      <!-- Header -->
      <header class="mb-8">
        <h1 class="font-serif text-4xl md:text-5xl mb-6">Trips We Planned</h1>
        <p class="text-xl text-ink-secondary leading-relaxed">
          Real examples, anonymized. These case studies show how Otherwhere works across different trip types, budgets, and timelines.
        </p>
      </header>

      <!-- Trust Signals -->
      <TrustSignals stats={trustStats} testimonial={testimonial} />

      <hr class="section-divider" />

      <!-- Case Study Grid -->
      <section>
        <div class="space-y-6">
          {caseStudies.map((study) => (
            <a href={`/case-studies/${study.slug}`} class="block group">
              <article class="bg-paper-secondary rounded-xl p-6 hover:bg-paper-tertiary transition-colors">
                <div class="flex flex-col md:flex-row md:items-center gap-4">
                  <div class="flex-grow">
                    <span class="text-accent text-sm font-medium">{study.type}</span>
                    <h2 class="font-serif text-xl my-2 group-hover:text-accent transition-colors">{study.title}</h2>
                    <p class="text-ink-secondary text-sm italic">"{study.quote}"</p>
                  </div>
                  <div class="flex-shrink-0 md:text-right">
                    <p class="font-serif text-lg">{study.destination}</p>
                    <p class="text-sm text-ink-tertiary">{study.time} of texts</p>
                  </div>
                </div>
              </article>
            </a>
          ))}
        </div>
      </section>

      <hr class="section-divider" />

      <!-- CTA -->
      <section class="text-center py-8">
        <h2 class="font-serif text-2xl mb-4">Want this for your trip?</h2>
        <p class="text-ink-secondary mb-6 max-w-md mx-auto">
          Text us where you want to go. We'll send options. You pick. We book.
        </p>
        <a
          href="sms:+13239224067"
          class="inline-block bg-accent hover:bg-accent-hover text-paper px-8 py-4 rounded-xl font-medium transition-colors text-lg"
        >
          Text Us to Plan Your Trip
        </a>
      </section>
    </div>
  </article>
</BaseLayout>
