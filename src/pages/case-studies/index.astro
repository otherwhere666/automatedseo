---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CategoryPill from '../../components/CategoryPill.astro';
import { getCaseStudySummaries } from '../../utils/content';

const caseStudies = getCaseStudySummaries();

const schemas = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Trips We Planned | Otherwhere Case Studies",
    "description": "Real examples of trips planned through Otherwhere. See how personal travel booking works with anonymized case studies."
  }
];
---

<BaseLayout
  title="Trips We Planned | Otherwhere Case Studies"
  description="Real examples of trips planned through Otherwhere. See how personal travel booking works with anonymized case studies."
  schema={schemas}
>
  <!-- Hero Section (Cream) -->
  <section class="bg-paper py-12 md:py-16">
    <div class="max-w-wide mx-auto px-6">
      <header class="mb-10">
        <h1 class="font-display text-5xl md:text-6xl lg:text-7xl tracking-wide">TRIPS WE PLANNED</h1>
        <p class="text-ink-secondary mt-4 text-lg max-w-2xl">
          Real examples, anonymized. These case studies show how Otherwhere works across different trip types, budgets, and timelines.
        </p>
      </header>

      <!-- Stats -->
      <div class="flex gap-12 mb-8">
        <div>
          <p class="font-display text-4xl">{caseStudies.length}</p>
          <p class="text-sm text-ink-tertiary mt-1">Case studies</p>
        </div>
        <div>
          <p class="font-display text-4xl">~5</p>
          <p class="text-sm text-ink-tertiary mt-1">Minutes to booked</p>
        </div>
        <div>
          <p class="font-display text-4xl">100%</p>
          <p class="text-sm text-ink-tertiary mt-1">Booked</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Case Studies Grid (Dark) -->
  <section class="section-dark py-16 md:py-20">
    <div class="max-w-wide mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
        {caseStudies.map((study) => (
          <a href={`/case-studies/${study.slug}`} class="magazine-card group">
            <div class="relative mb-4">
              <img
                src={study.image}
                alt={study.destination}
                class="magazine-card-image"
                loading="lazy"
              />
            </div>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <CategoryPill category={study.type} variant="light" />
                <span class="text-paper/50 text-sm">{study.time}</span>
              </div>
              <h2 class="font-display text-xl md:text-2xl leading-tight text-paper">
                {study.title}
              </h2>
              <p class="text-paper/70 text-sm italic line-clamp-2">"{study.quote}"</p>
              <p class="text-paper/50 text-sm">{study.destination}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA (Cream) -->
  <section class="bg-paper py-20 md:py-24">
    <div class="max-w-wide mx-auto px-6 text-center">
      <p class="text-xs uppercase tracking-widest text-ink-tertiary mb-4" style="letter-spacing: 0.15em;">
        YOUR TURN
      </p>
      <h2 class="font-display text-3xl md:text-4xl lg:text-5xl mb-6">
        WANT THIS FOR YOUR TRIP?
      </h2>
      <p class="text-ink-secondary text-lg mb-10 max-w-md mx-auto">
        Text us where you want to go. We'll send options. You pick. We book.
      </p>
      <a href="sms:+13239224067" class="btn-pill btn-pill-primary inline-block">
        TEXT US TO START
      </a>
    </div>
  </section>
</BaseLayout>
