---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustSignals from '../../components/TrustSignals.astro';
import { getCaseStudySummaries } from '../../utils/content';

const caseStudies = getCaseStudySummaries();

const schemas = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Trips We Planned | Otherwhere Case Studies",
    "description": "Real examples of trips planned through Otherwhere. See how personal travel booking works with anonymized case studies."
  }
];

const trustStats = [
  { value: "9", label: "Case studies" },
  { value: "~5 min", label: "Avg. to booked" },
  { value: "100%", label: "Booked" }
];

const testimonial = {
  quote: "I told them where I wanted to go and five minutes later I had options. Ten minutes after that, I was booked.",
  author: "Otherwhere customer"
};
---

<BaseLayout
  title="Trips We Planned | Otherwhere Case Studies"
  description="Real examples of trips planned through Otherwhere. See how personal travel booking works with anonymized case studies."
  schema={schemas}
>
  <article class="py-12">
    <div class="blog-content">
      <!-- Header -->
      <header class="mb-8">
        <h1 class="text-4xl md:text-5xl font-light tracking-wide mb-6">TRIPS WE PLANNED</h1>
        <p class="text-lg text-ink-secondary leading-relaxed max-w-2xl">
          Real examples, anonymized. These case studies show how Otherwhere works across different trip types, budgets, and timelines.
        </p>
      </header>

      <!-- Trust Signals -->
      <TrustSignals stats={trustStats} testimonial={testimonial} />

      <hr class="section-divider" />

      <!-- Case Study Grid -->
      <section>
        <div class="grid md:grid-cols-2 gap-6">
          {caseStudies.map((study) => (
            <a href={`/case-studies/${study.slug}`} class="block group">
              <article class="bg-paper-secondary rounded-xl overflow-hidden hover:bg-paper-tertiary transition-colors">
                <img
                  src={study.image}
                  alt={study.destination}
                  class="w-full h-40 object-cover"
                />
                <div class="p-5">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-accent text-sm font-medium">{study.type}</span>
                    <span class="text-sm text-ink-tertiary">{study.time}</span>
                  </div>
                  <h2 class="font-serif text-lg mb-2 group-hover:text-accent transition-colors">{study.title}</h2>
                  <p class="text-ink-secondary text-sm italic mb-3">"{study.quote}"</p>
                  <p class="font-serif text-sm text-ink-tertiary">{study.destination}</p>
                </div>
              </article>
            </a>
          ))}
        </div>
      </section>

      <hr class="section-divider" />

      <!-- CTA -->
      <section class="text-center py-12">
        <h2 class="text-2xl font-light tracking-wide mb-4">WANT THIS FOR YOUR TRIP?</h2>
        <p class="text-ink-secondary mb-8 max-w-md mx-auto">
          Text us where you want to go. We'll send options. You pick. We book.
        </p>
        <a href="sms:+13239224067" class="btn-primary inline-block">
          TEXT US TO START
        </a>
      </section>
    </div>
  </article>
</BaseLayout>
