---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPillars, getPostsByPillar, getAllPosts } from '../../utils/content';

const pillars = getAllPillars();
const allPosts = getAllPosts();

// Get post counts for each pillar
const pillarCounts = pillars.map(p => ({
  ...p,
  count: getPostsByPillar(p.id).length
}));

const schemas = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Topics | Otherwhere Blog",
    "description": "Browse travel articles by topic. AI travel, trip planning, destination guides, and more."
  }
];
---

<BaseLayout
  title="Topics | Otherwhere Blog"
  description="Browse travel articles by topic. AI travel, trip planning, destination guides, and more."
  schema={schemas}
>
  <article class="py-12">
    <div class="blog-content">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-light tracking-wide mb-6">TOPICS</h1>
        <p class="text-lg text-ink-secondary leading-relaxed max-w-2xl">
          Browse our content by theme. Each topic represents a different angle on travel booking and planning.
        </p>
      </header>

      <!-- Pillar Grid -->
      <div class="grid md:grid-cols-2 gap-6">
        {pillars.map((pillar) => {
          const posts = getPostsByPillar(pillar.id);
          return (
            <a href={`/topics/${pillar.id}`} class="block group">
              <article class="bg-paper-secondary rounded-xl p-6 hover:bg-paper-tertiary transition-colors h-full">
                <div class="flex items-center justify-between mb-3">
                  <span class={`text-xs uppercase tracking-widest ${pillar.priority === 'high' ? 'text-accent' : 'text-ink-tertiary'}`}>
                    {pillar.priority === 'high' ? 'FEATURED' : 'TOPIC'}
                  </span>
                  <span class="text-sm text-ink-tertiary">{posts.length} articles</span>
                </div>
                <h2 class="font-serif text-xl mb-3 group-hover:text-accent transition-colors">{pillar.name}</h2>
                <p class="text-ink-secondary text-sm leading-relaxed">{pillar.angle}</p>
              </article>
            </a>
          );
        })}
      </div>

      <!-- All Posts Stats -->
      <div class="mt-12 pt-8 border-t border-paper-tertiary text-center">
        <p class="text-ink-tertiary">
          {allPosts.length} total articles across {pillars.length} topics
        </p>
      </div>

      <hr class="section-divider" />

      <!-- CTA -->
      <section class="text-center py-12">
        <h2 class="text-2xl font-light tracking-wide mb-4">CAN'T FIND WHAT YOU'RE LOOKING FOR?</h2>
        <p class="text-ink-secondary mb-8 max-w-md mx-auto">
          Text us your travel question. We're happy to help, even if you're not ready to book.
        </p>
        <a href="sms:+13239224067" class="btn-primary inline-block">
          TEXT US A QUESTION
        </a>
      </section>
    </div>
  </article>
</BaseLayout>
