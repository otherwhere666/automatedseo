---
import BaseLayout from '../layouts/BaseLayout.astro';
import CategoryPill from '../components/CategoryPill.astro';
import SchemaMarkup from '../components/SchemaMarkup.astro';

// Page schemas
const schemas = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "What is Otherwhere?",
    "description": "Otherwhere is a personal travel booking service. Text or call to get flights and hotels booked for you."
  },
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Otherwhere Travel Booking",
    "serviceType": "Travel Planning and Booking",
    "provider": {
      "@type": "Organization",
      "name": "Otherwhere"
    },
    "description": "Text or call to get flights and hotels booked for you.",
    "areaServed": "Worldwide",
    "availableChannel": {
      "@type": "ServiceChannel",
      "serviceType": "SMS",
      "servicePhone": "+1-323-922-4067"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "HowTo",
    "name": "How to Book Travel with Otherwhere",
    "description": "Book flights and hotels by texting Otherwhere. Get curated options and complete booking in minutes.",
    "totalTime": "PT5M",
    "step": [
      {
        "@type": "HowToStep",
        "position": 1,
        "name": "Text your trip details",
        "text": "Text or call (323) 922-4067 with your destination, dates, and preferences. Example: 'Flying SFO to Rome, December 15-22, 2 travelers'."
      },
      {
        "@type": "HowToStep",
        "position": 2,
        "name": "Receive curated options",
        "text": "Otherwhere searches flights and hotels, then sends 3-5 curated options with real prices matched to your preferences."
      },
      {
        "@type": "HowToStep",
        "position": 3,
        "name": "Pick and pay",
        "text": "Select your preferred options and pay through a secure Stripe link. Otherwhere handles the complete booking."
      },
      {
        "@type": "HowToStep",
        "position": 4,
        "name": "Get confirmations",
        "text": "Receive confirmation numbers, PNRs, and e-tickets. Your trip is booked."
      }
    ]
  }
];

const faqData = {
  questions: [
    {
      question: "Is Otherwhere free to use?",
      answer: "Yes, it's free to text us and get options. Our pricing is built into the rates you see‚Äîno hidden fees or service charges added at checkout."
    },
    {
      question: "Do you actually book for me?",
      answer: "Yes. Once you select your flights and hotel, we send you a checkout link to review the details and pay. After you verify everything is correct and complete payment, we handle the entire booking. You'll receive confirmation numbers, PNRs, and e-tickets directly. We book through Duffel, a modern travel API that connects to major airlines and hotel chains."
    },
    {
      question: "How does payment work?",
      answer: "After you choose your options, we send a secure Stripe payment link. For flights, we hold your seat for about 30 minutes while you review and pay‚Äîno risk of losing it while you decide. Hotels are booked instantly after payment."
    },
    {
      question: "What if I need to cancel or change my booking?",
      answer: "Cancellations and changes follow the airline and hotel policies. We can help you understand the policy before you book and assist with changes if needed."
    },
    {
      question: "How is this different from using Expedia or Google Flights?",
      answer: "Those tools show you hundreds of options to filter yourself. We show you 3-5 curated options based on what you actually want, then book everything for you. Less searching, more finding."
    },
    {
      question: "Do you work with my airline loyalty program?",
      answer: "Yes. Tell us your loyalty programs (Delta SkyMiles, United MileagePlus, Marriott Bonvoy, etc.) and we'll find options that earn you points and respect your status."
    }
  ]
};
---

<BaseLayout
  title="What is Otherwhere? | Personal Travel Booking Service"
  description="Otherwhere is a personal travel booking service. Text or call to get flights and hotels booked for you‚Äîend to end."
  schema={schemas}
>
  <SchemaMarkup type="FAQ" data={faqData} />

  <!-- Hero Section -->
  <section class="bg-paper py-16 md:py-24">
    <div class="max-w-wide mx-auto px-6">
      <header class="max-w-3xl">
        <p class="section-subtitle text-ink-tertiary mb-4">HOW IT WORKS</p>
        <h1 class="font-display text-4xl md:text-5xl lg:text-6xl mb-6">WHAT IS OTHERWHERE?</h1>
        <p class="text-xl md:text-2xl text-ink-secondary leading-relaxed mb-8">
          Otherwhere plans and books your trips end-to-end. Text or call with where you want to go, and we'll find flights and hotels that match your preferences‚Äîthen book everything for you.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="sms:+13239224067" class="btn-pill btn-pill-primary">TEXT US TO START</a>
          <a href="tel:+13239224067" class="btn-pill btn-pill-secondary">CALL (323) 922-4067</a>
        </div>
      </header>

      <!-- Stats -->
      <div class="stats-row mt-12 pt-12 border-t border-paper-tertiary">
        <div class="stat-item">
          <div class="stat-value">100%</div>
          <div class="stat-label">Booking rate</div>
        </div>
        <div class="stat-item">
          <div class="stat-value">~5 min</div>
          <div class="stat-label">Avg. to booked</div>
        </div>
        <div class="stat-item">
          <div class="stat-value">Free</div>
          <div class="stat-label">To use</div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="bg-dark py-16 md:py-24">
    <div class="max-w-wide mx-auto px-6">
      <p class="section-subtitle text-paper/50 mb-2">THE PROCESS</p>
      <h2 class="font-display text-3xl md:text-4xl text-paper mb-12">HOW IT WORKS</h2>

      <div class="grid md:grid-cols-3 gap-8 md:gap-12">
        <div class="text-center md:text-left">
          <div class="font-display text-5xl md:text-6xl text-paper/30 mb-4">01</div>
          <h3 class="font-display text-xl text-paper mb-3">SAY WHERE</h3>
          <p class="text-paper/70 leading-relaxed">
            Text or call (323) 922-4067 with your trip details. "Flying SFO to Rome, December 15-22, 2 travelers" works. So does "romantic long weekend in Europe, flexible on dates."
          </p>
        </div>
        <div class="text-center md:text-left">
          <div class="font-display text-5xl md:text-6xl text-paper/30 mb-4">02</div>
          <h3 class="font-display text-xl text-paper mb-3">GET OPTIONS</h3>
          <p class="text-paper/70 leading-relaxed">
            We search flights and hotels, then send you 3-5 curated options with real prices. We match your timing preferences, cabin class, loyalty programs, and style.
          </p>
        </div>
        <div class="text-center md:text-left">
          <div class="font-display text-5xl md:text-6xl text-paper/30 mb-4">03</div>
          <h3 class="font-display text-xl text-paper mb-3">BOOKED FOR YOU</h3>
          <p class="text-paper/70 leading-relaxed">
            Pick your options, pay through a secure link, and we handle the rest. You'll get confirmation numbers, PNRs, and e-tickets. No forms to fill, no checkout flows‚Äîjust confirmations.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Book -->
  <section class="bg-paper py-16 md:py-24">
    <div class="max-w-wide mx-auto px-6">
      <p class="section-subtitle text-ink-tertiary mb-2">SERVICES</p>
      <h2 class="font-display text-3xl md:text-4xl mb-12">WHAT WE BOOK</h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-paper-secondary rounded-card p-6">
          <div class="text-3xl mb-4">‚úàÔ∏è</div>
          <h3 class="font-display text-lg mb-2">FLIGHTS</h3>
          <p class="text-ink-secondary text-sm leading-relaxed">Round-trip or one-way. We search major airlines through Duffel's API and hold your seats while you decide (about 30 minutes).</p>
        </div>
        <div class="bg-paper-secondary rounded-card p-6">
          <div class="text-3xl mb-4">üè®</div>
          <h3 class="font-display text-lg mb-2">HOTELS</h3>
          <p class="text-ink-secondary text-sm leading-relaxed">Matched to your destination and dates. We show pricing breakdowns including taxes before you book.</p>
        </div>
        <div class="bg-paper-secondary rounded-card p-6">
          <div class="text-3xl mb-4">üí≥</div>
          <h3 class="font-display text-lg mb-2">LOYALTY</h3>
          <p class="text-ink-secondary text-sm leading-relaxed">Tell us your frequent flyer and hotel programs. We'll find options that earn you points.</p>
        </div>
        <div class="bg-paper-secondary rounded-card p-6">
          <div class="text-3xl mb-4">üîÑ</div>
          <h3 class="font-display text-lg mb-2">PREFERENCES</h3>
          <p class="text-ink-secondary text-sm leading-relaxed">We remember what you like‚Äîaisle vs window, boutique vs chain, direct flights only. Future trips get easier.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Don't Do -->
  <section class="bg-paper-secondary py-16 md:py-24">
    <div class="max-w-wide mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <div>
          <p class="section-subtitle text-ink-tertiary mb-2">COMING SOON</p>
          <h2 class="font-display text-3xl md:text-4xl mb-6">WHAT WE DON'T DO (YET)</h2>
          <p class="text-ink-secondary text-lg leading-relaxed">
            We're focused on doing flights and hotels really well. Here's what's not available yet:
          </p>
        </div>
        <div class="space-y-4">
          <div class="flex items-center gap-4 text-ink-secondary">
            <span class="text-ink-tertiary text-xl">√ó</span>
            <span>Car rentals and ground transportation</span>
          </div>
          <div class="flex items-center gap-4 text-ink-secondary">
            <span class="text-ink-tertiary text-xl">√ó</span>
            <span>Activities, tours, and experiences</span>
          </div>
          <div class="flex items-center gap-4 text-ink-secondary">
            <span class="text-ink-tertiary text-xl">√ó</span>
            <span>Multi-city trips (A‚ÜíB‚ÜíC routes)</span>
          </div>
          <div class="flex items-center gap-4 text-ink-secondary">
            <span class="text-ink-tertiary text-xl">√ó</span>
            <span>Seat selection and meal preferences</span>
          </div>
          <div class="flex items-center gap-4 text-ink-secondary">
            <span class="text-ink-tertiary text-xl">√ó</span>
            <span>Travel insurance</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Who It's For -->
  <section class="bg-paper py-16 md:py-24">
    <div class="max-w-wide mx-auto px-6">
      <p class="section-subtitle text-ink-tertiary mb-2">FIT CHECK</p>
      <h2 class="font-display text-3xl md:text-4xl mb-12">WHO IT'S FOR</h2>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-dark rounded-card p-8">
          <CategoryPill category="Great fit" variant="light" class="mb-6" />
          <ul class="space-y-4 text-paper/80">
            <li class="flex items-start gap-3">
              <span class="text-paper/50">‚Üí</span>
              <span>Busy people who'd rather text than search</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-paper/50">‚Üí</span>
              <span>Travelers who want someone to handle the booking</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-paper/50">‚Üí</span>
              <span>People tired of 47 browser tabs</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-paper/50">‚Üí</span>
              <span>Anyone who's thought "just book it for me"</span>
            </li>
          </ul>
        </div>
        <div class="bg-paper-secondary rounded-card p-8">
          <CategoryPill category="Maybe not ideal" variant="dark" class="mb-6" />
          <ul class="space-y-4 text-ink-secondary">
            <li class="flex items-start gap-3">
              <span class="text-ink-tertiary">‚Üí</span>
              <span>Extreme budget optimizers (we're not a price comparison tool)</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-ink-tertiary">‚Üí</span>
              <span>People who enjoy the research process</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-ink-tertiary">‚Üí</span>
              <span>Complex multi-city itineraries</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section class="bg-dark py-16 md:py-24">
    <div class="max-w-wide mx-auto px-6 text-center">
      <p class="section-subtitle text-paper/50 mb-2">PRICING</p>
      <h2 class="font-display text-4xl md:text-5xl text-paper mb-6">FREE TO USE</h2>
      <p class="text-paper/70 text-lg max-w-2xl mx-auto leading-relaxed">
        No subscription, no service fees. Our pricing is built into the rates you see. We earn a small margin on flights and commissions from hotel partners‚Äîsimilar to how other booking platforms work. You see the total price upfront, pay once, done.
      </p>
    </div>
  </section>

  <!-- FAQ -->
  <section class="bg-paper py-16 md:py-24">
    <div class="max-w-wide mx-auto px-6">
      <p class="section-subtitle text-ink-tertiary mb-2">QUESTIONS</p>
      <h2 class="font-display text-3xl md:text-4xl mb-12">FAQ</h2>

      <div class="max-w-3xl space-y-8">
        {faqData.questions.map((faq) => (
          <div class="border-b border-paper-tertiary pb-8">
            <h3 class="font-display text-lg md:text-xl mb-4">{faq.question.toUpperCase()}</h3>
            <p class="text-ink-secondary leading-relaxed">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-paper cta-section border-t border-paper-tertiary">
    <div class="cta-section-content">
      <p class="cta-section-subtitle">READY TO GO?</p>
      <h2 class="cta-section-title">TEXT US WHERE YOU WANT TO GO</h2>
      <p class="cta-section-description">
        We'll send options. You pick. We book.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="sms:+13239224067" class="btn-pill btn-pill-primary">TEXT (323) 922-4067</a>
        <a href="/blog" class="btn-pill btn-pill-secondary">READ OUR GUIDES</a>
      </div>
    </div>
  </section>
</BaseLayout>
