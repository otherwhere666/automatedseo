---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTABanner from '../components/CTABanner.astro';
import QuotableBlock from '../components/QuotableBlock.astro';
import SchemaMarkup from '../components/SchemaMarkup.astro';
import TrustSignals from '../components/TrustSignals.astro';
import CalloutBox from '../components/CalloutBox.astro';

// Page schemas
const schemas = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "What is Otherwhere?",
    "description": "Otherwhere is an AI travel concierge: text or call to get curated trip options and booking help."
  },
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Otherwhere AI Travel Concierge",
    "serviceType": "Travel Planning",
    "provider": {
      "@type": "Organization",
      "name": "Otherwhere"
    },
    "description": "Text or call to get curated trip options and booking help.",
    "areaServed": "Worldwide",
    "availableChannel": {
      "@type": "ServiceChannel",
      "serviceType": "SMS",
      "servicePhone": "+1-323-922-4067"
    }
  }
];

const faqData = {
  questions: [
    {
      question: "Is Otherwhere free to use?",
      answer: "Yes, it's free to text us and get recommendations. We earn a small commission when you book through our partner links, similar to how travel sites work."
    },
    {
      question: "Do you book for me or do I book myself?",
      answer: "We help you find the right options and can assist with booking. For most bookings, you'll complete the purchase directly with the hotel or airline, but we handle the research and coordination."
    },
    {
      question: "What if I need to cancel or change my booking?",
      answer: "Cancellations and changes are handled per the provider's policy (hotel, airline, etc.). We can help you understand the policy before you book and assist with changes if needed."
    },
    {
      question: "How is this different from using Expedia or Google Flights?",
      answer: "Those tools give you thousands of options to filter yourself. We give you 3-5 curated recommendations based on your specific needs. Less searching, more finding."
    },
    {
      question: "Can you help with complex itineraries?",
      answer: "Yes, though very complex multi-city trips may require more back-and-forth conversation. We're best at focused trips: a honeymoon destination, a weekend getaway, a business trip."
    }
  ]
};

const trustStats = [
  { value: "100%", label: "Booking rate" },
  { value: "14 min", label: "Avg. conversation" },
  { value: "Free", label: "To try" }
];

const testimonial = {
  quote: "I couldn't have done this alone. She cried when she found out.",
  author: "Surprise anniversary planner, Burgundy trip"
};
---

<BaseLayout
  title="What is Otherwhere? | AI Travel Concierge Explained"
  description="Otherwhere is an AI travel concierge: text or call to get curated trip options and booking help. Learn how it works and who it's for."
  schema={schemas}
>
  <SchemaMarkup type="FAQ" data={faqData} />

  <article class="py-12">
    <div class="blog-content">
      <!-- Header -->
      <header class="mb-8">
        <h1 class="font-serif text-4xl md:text-5xl mb-6">What is Otherwhere?</h1>
        <p class="text-xl text-ink-secondary leading-relaxed">
          Planning a trip shouldn't feel like a second job. Otherwhere is your personal travel concierge—available via text message, powered by AI, guided by real expertise.
        </p>
      </header>

      <!-- Trust Signals -->
      <TrustSignals stats={trustStats} testimonial={testimonial} />

      <!-- Quick Definition -->
      <CalloutBox title="The Short Version" variant="highlight">
        <p class="text-lg"><strong>Text us what you want. We'll send you 3-5 curated options with real prices. You book the one you like.</strong></p>
      </CalloutBox>

      <hr class="section-divider" />

      <!-- How It Works -->
      <section>
        <h2 class="font-serif text-2xl mb-8" id="how-it-works">How It Works</h2>
        <div class="space-y-8">
          <div class="flex gap-5">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-accent text-paper flex items-center justify-center font-serif text-xl">1</div>
            <div>
              <h3 class="font-medium text-lg mb-2">Text us at (323) 922-4067</h3>
              <p class="text-ink-secondary">Start with a simple message: "Looking for a romantic hotel in Lisbon for 4 nights in March."</p>
            </div>
          </div>
          <div class="flex gap-5">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-accent text-paper flex items-center justify-center font-serif text-xl">2</div>
            <div>
              <h3 class="font-medium text-lg mb-2">Tell us what matters</h3>
              <p class="text-ink-secondary">Budget, vibe, must-haves, dealbreakers. We ask only what we need to narrow it down.</p>
            </div>
          </div>
          <div class="flex gap-5">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-accent text-paper flex items-center justify-center font-serif text-xl">3</div>
            <div>
              <h3 class="font-medium text-lg mb-2">Get curated options</h3>
              <p class="text-ink-secondary">We search real inventory and send you 3-5 options with actual prices. Not 200 results—just the ones worth considering.</p>
            </div>
          </div>
        </div>

        <div class="text-center mt-10">
          <a
            href="sms:+13239224067"
            class="inline-block bg-accent hover:bg-accent-hover text-paper px-6 py-3 rounded-xl font-medium transition-colors"
          >
            Try It Now — Text Us
          </a>
        </div>
      </section>

      <hr class="section-divider" />

      <!-- What We Can Do -->
      <section>
        <h2 class="font-serif text-2xl mb-6" id="what-we-do">What We Can Do</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="bg-paper-secondary rounded-xl p-5">
            <span class="text-accent text-xl">✓</span>
            <h3 class="font-medium mt-2 mb-1">Search across sources</h3>
            <p class="text-ink-secondary text-sm">Flights and hotels from multiple aggregators</p>
          </div>
          <div class="bg-paper-secondary rounded-xl p-5">
            <span class="text-accent text-xl">✓</span>
            <h3 class="font-medium mt-2 mb-1">Curate, not list</h3>
            <p class="text-ink-secondary text-sm">3-5 options tailored to your preferences</p>
          </div>
          <div class="bg-paper-secondary rounded-xl p-5">
            <span class="text-accent text-xl">✓</span>
            <h3 class="font-medium mt-2 mb-1">Handle logistics</h3>
            <p class="text-ink-secondary text-sm">Booking coordination and support</p>
          </div>
          <div class="bg-paper-secondary rounded-xl p-5">
            <span class="text-accent text-xl">✓</span>
            <h3 class="font-medium mt-2 mb-1">Remember you</h3>
            <p class="text-ink-secondary text-sm">Preferences saved for future trips</p>
          </div>
        </div>
      </section>

      <hr class="section-divider" />

      <!-- What We Can't Do -->
      <section>
        <h2 class="font-serif text-2xl mb-6" id="limitations">Our Limitations</h2>
        <p class="text-ink-secondary mb-6">Transparency builds trust. Here's where our limits are:</p>
        <ul class="space-y-3 text-ink-secondary">
          <li class="flex items-start gap-3">
            <span class="text-ink-tertiary mt-1">×</span>
            <span>We don't have access to every airline/hotel (we use major aggregators)</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-ink-tertiary mt-1">×</span>
            <span>We can't guarantee specific prices (they change in real-time)</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-ink-tertiary mt-1">×</span>
            <span>We're not a licensed travel agency (we facilitate, you book)</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-ink-tertiary mt-1">×</span>
            <span>Complex multi-city itineraries may require back-and-forth</span>
          </li>
        </ul>
      </section>

      <hr class="section-divider" />

      <!-- Who It's For -->
      <section>
        <h2 class="font-serif text-2xl mb-6" id="who-its-for">Who It's For</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-paper-secondary rounded-xl p-6">
            <h3 class="font-medium text-accent mb-4">Ideal for</h3>
            <ul class="space-y-2 text-ink-secondary">
              <li>• Busy professionals who value time over money</li>
              <li>• Travelers who want curation, not endless options</li>
              <li>• People who hate the "47 open tabs" research process</li>
              <li>• Anyone who's thought "I'd pay someone to handle this"</li>
            </ul>
          </div>
          <div class="bg-paper-secondary rounded-xl p-6">
            <h3 class="font-medium mb-4">Not ideal for</h3>
            <ul class="space-y-2 text-ink-secondary">
              <li>• Budget travelers optimizing for the absolute cheapest option</li>
              <li>• People who enjoy the research process</li>
              <li>• Complex group travel with 10+ people (yet)</li>
            </ul>
          </div>
        </div>
      </section>

      <hr class="section-divider" />

      <!-- Pricing -->
      <section>
        <h2 class="font-serif text-2xl mb-6" id="pricing">Pricing</h2>
        <CalloutBox variant="default">
          <p class="text-lg mb-3"><strong>Free to try.</strong> Text us, get recommendations, no charge.</p>
          <p class="text-ink-secondary">We earn money through affiliate partnerships with hotels and booking platforms—similar to how other travel sites work. Our incentive is aligned with yours: we want you to book something great.</p>
        </CalloutBox>
      </section>

      <hr class="section-divider" />

      <!-- FAQ -->
      <section>
        <h2 class="font-serif text-2xl mb-6" id="faq">Frequently Asked Questions</h2>
        <div class="space-y-6">
          {faqData.questions.map((faq) => (
            <div class="border-b border-paper-tertiary pb-6">
              <h3 class="font-medium text-lg mb-3">{faq.question}</h3>
              <p class="text-ink-secondary leading-relaxed">{faq.answer}</p>
            </div>
          ))}
        </div>
      </section>

      <hr class="section-divider" />

      <!-- CTA -->
      <section class="text-center py-8">
        <h2 class="font-serif text-2xl mb-4">Ready to try it?</h2>
        <p class="text-ink-secondary mb-6 max-w-md mx-auto">
          No commitment, no sign-up. Just text us where you want to go.
        </p>
        <a
          href="sms:+13239224067"
          class="inline-block bg-accent hover:bg-accent-hover text-paper px-8 py-4 rounded-xl font-medium transition-colors text-lg"
        >
          Text Us to Get Started
        </a>
      </section>
    </div>
  </article>
</BaseLayout>
