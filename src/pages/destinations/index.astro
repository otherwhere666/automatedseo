---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getDestinationsByRegion, getDestinationSummaries, getCurrentYear } from '../../utils/content';

const destinations = getDestinationSummaries();
const byRegion = getDestinationsByRegion();
const regionOrder = ["Europe", "Asia", "Americas", "Middle East & Africa", "Islands"];
const currentYear = getCurrentYear();

const schemas = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Destination Guides | Otherwhere",
    "description": "Curated destination guides for discerning travelers. Not 50 hotels — just the ones worth considering."
  }
];
---

<BaseLayout
  title="Destination Guides | Otherwhere"
  description="Curated destination guides for discerning travelers. Not 50 hotels — just the ones worth considering."
  schema={schemas}
>
  <article class="py-12">
    <div class="blog-content">
      <!-- Header -->
      <header class="mb-8">
        <h1 class="text-4xl md:text-5xl font-light tracking-wide mb-6">DESTINATION GUIDES</h1>
        <p class="text-lg text-ink-secondary leading-relaxed max-w-2xl">
          Curated guides, not comprehensive lists. We tell you where to stay for different types of travelers — and what to skip.
        </p>
      </header>

      <!-- Stats -->
      <div class="flex gap-8 mb-8 text-center justify-center">
        <div>
          <p class="font-serif text-3xl">{destinations.length}</p>
          <p class="text-sm text-ink-tertiary">Destinations</p>
        </div>
        <div>
          <p class="font-serif text-3xl">3</p>
          <p class="text-sm text-ink-tertiary">Traveler types each</p>
        </div>
        <div>
          <p class="font-serif text-3xl">57</p>
          <p class="text-sm text-ink-tertiary">Neighborhoods covered</p>
        </div>
      </div>

      <hr class="section-divider" />

      {regionOrder.map((region) => byRegion[region] && (
        <section class="mb-16">
          <h2 class="text-xs uppercase tracking-widest text-ink-tertiary mb-8">{region.toUpperCase()}</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
            {byRegion[region].map((d) => (
              <a href={`/destinations/${d.slug}`} class="block group">
                <article class="bg-paper-secondary rounded-xl overflow-hidden hover:bg-paper-tertiary transition-colors">
                  <img
                    src={d.image}
                    alt={d.city}
                    class="w-full h-36 object-cover"
                  />
                  <div class="p-4">
                    <h3 class="font-serif text-lg group-hover:text-accent transition-colors">{d.city}</h3>
                    <p class="text-sm text-ink-tertiary mb-1">{d.country}</p>
                    <p class="text-sm text-ink-secondary italic">{d.tagline}</p>
                  </div>
                </article>
              </a>
            ))}
          </div>
        </section>
      ))}

      <hr class="section-divider" />

      <!-- CTA -->
      <section class="text-center py-12">
        <h2 class="text-2xl font-light tracking-wide mb-4">DON'T SEE YOUR DESTINATION?</h2>
        <p class="text-ink-secondary mb-8 max-w-md mx-auto">
          Text us where you want to go. We'll send curated recommendations — no guide required.
        </p>
        <a href="sms:+13239224067" class="btn-primary inline-block">
          TEXT US YOUR DESTINATION
        </a>
      </section>
    </div>
  </article>
</BaseLayout>
